<div class="mx-auto md:w-2/3 w-full mt-20">
  
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render "form", book: @book, viewing: true, source: "show" %>

  <div class="flex justify-between">
  <div class="flex flex-wrap">
    <%= link_to 'Edit', edit_book_path(@book), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium hover:opacity-70" %>
    <div class="inline-block ml-2">
      <%= button_to 'Delete', book_path(@book), method: :delete, class: "bg-red-500 mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium hover:opacity-70" %>
    </div>
    </div>
    <%= link_to 'Back to books', books_path, class: "mt-2 ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium hover:opacity-70" %>
 </div>
</div>
