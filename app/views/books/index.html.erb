<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex items-center">
    <h1 class="font-bold text-4xl m-auto mt-4">Books</h1>
    
  </div>

  <div class="w-1/2 mx-auto mt-12">
    <%= link_to 'Add book', new_book_path, class: "text-center w-32 rounded-lg py-3 px-5 bg-blue-700 text-white block font-medium hover:opacity-70" %>
  </div>
  
  <div id="books" class="grid grid-cols-5 w-1/2 mt-6 mx-auto">
      <div class="border-t-2 border-gray-300">
        <span class="font-bold text-xl">Date Added</span>
      </div>
     <div class="border-t-2 border-gray-300">
        <span class="font-bold text-xl">Title</span>
      </div>
      <div class="border-t-2 border-gray-300"> 
        <span class="font-bold text-xl">Author</span>
      </div>
      <div class="border-t-2 border-gray-300">
        <span class="font-bold text-xl">Read?</span>
      </div>
      <div class="border-t-2 border-gray-300">
        <span class="font-bold text-xl">Starred?</span>
      </div>
          
          
      <%= render @books %>
      
    
    
  </div>
  
</div>
