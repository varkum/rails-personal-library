<%= turbo_frame_tag "add_form", class: "contents" do %>
<%= form_with(model: movie, class: "contents") do |form| %>
  <% if movie.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(movie.errors.count, "error") %> prohibited this movie from being saved:</h2>

      <ul>
        <% movie.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name, disabled: viewing, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :notes %>
    <%= form.text_area :notes, rows: 4, disabled: viewing, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :starred %>
    <%= form.check_box :starred, class: "block mt-2 h-5 w-5" %>
  </div>

  <div class="my-5">
    <%= form.label "Watched?" %>
    <%= form.check_box :consumed, disabled: viewing, class: "block mt-2 h-5 w-5" %>
  </div>

  <% unless viewing %>
  <% if source == 'new' %>
     <div class="inline">
        <%= form.submit "Add movie", class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer", data: { turbo_frame: "_top" } %>
      </div>
  <% elsif source == 'edit' %>
      <div class="inline">
        <%= form.submit "Confirm", class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
      </div>
  <% end %>
  <% end %>
<% end %>
<% end %>
