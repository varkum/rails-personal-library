<%= turbo_stream.replace @article do %>
    <%= render @article, sharing: false %>
<% end %>

<%= turbo_stream.replace "unread_articles" do %>
     <%= turbo_frame_tag "unread_articles" do %>
        <% if @articles.length > 0 %>
            <div class="w-2/3 mx-auto mt-4">
                <h2 class="font-bold text-2xl">Articles</h2>
            </div>
            <%= render partial: "articles/articles", locals: {articles: @articles, sharing: false} %>
        <% end %>
    <% end %>
<% end %>